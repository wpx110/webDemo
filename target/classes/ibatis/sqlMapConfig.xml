<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE sqlMapConfig         
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">  

<sqlMapConfig>  
    <settings lazyLoadingEnabled="true"  useStatementNamespaces="true" cacheModelsEnabled="true" enhancementEnabled="true"/>  
    <!-- 使用spring之后，数据源的配置移植到了spring上，所以iBATIS本身的配置可以取消 -->  
    <!-- 不管自动生成(autoGeneratedSqlMap)还是自己写(manualWroteSqlMap)的sqlmap,都需在下面配置引入 -->
    
    <!-- 自动生成(autoGeneratedSqlMap) -->
    <sqlMap resource="ibatis/autoGeneratedSqlMap/persons_SqlMap.xml"/>

    
    <!-- 自己写(manualWroteSqlMap) -->
    <!-- <sqlMap resource="ibatis/manualWroteSqlMap/auth_sqlMap.xml"/> -->
    
</sqlMapConfig>  
